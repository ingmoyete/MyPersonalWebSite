@{
    ViewBag.Title = partials.layoutRes.titleMainSinGuion;
}
@section AddToHead{
    <script>
    // Picture element HTML5 shiv
    document.createElement( "picture" );
    </script>
    <script src="~/Scripts/picturefill.min.js"></script>
}

@section scriptsBeforeBundle{
    @Scripts.Render("~/bundles/heroAbove")
}
<!-- Header Main Contant =========================================================== -->
<div class="container-fluid" id="navigationHeroId">
    <div class="row">
        <div class="col-xs-12 col-sm-12 col-md-7">
            <!-- Do not modify columns with min-width, max-width, so on -->
            <div id="imageBox" class="is-loading">
                <!-- apply centering and other css here -->
                <picture>
                    <!--[if IE 9]><video style="display: none;"><![endif]-->
                    <source srcset="/Images/SuperHero85Tiny.png" media="(min-width: 400px)">
                    <source srcset="/Images/SuperHero50Tiny.png" media="(max-width: 400px)">
                    <!--[if IE 9]></video><![endif]-->
                    <img src="/Images/SuperHero85Tiny.png" alt="@partials.index.pictureAlt">
                </picture>
            </div>
        </div>

        <div class="col-xs-12 col-sm-12 col-md-5">
            <div id="textBox">
                <h1 class="superHeroTitle stroke"><span class="@partials.index.frontEndIcon stroke"></span>@partials.index.frontEnd</h1>
                <p class="superHeroText heroParagraphSeparator">@partials.index.frontEndText</p>
                <div class="clearfix"></div>
                <h1 class="superHeroTitle stroke"><span class="@partials.index.backEndIcon stroke"></span>@partials.index.backEnd</h1>
                <p class="superHeroText">@partials.index.backEndText</p>
            </div>
        </div>
    </div>
</div> <!-- End: .container  -->

<!-- Profile summary =========================================================== -->
<section class="sa-features-1 whiteBackground" id="profileSummary">
    <div class="container">
        <div class="row">
            <!-- Texts -->
            <div class="sa-features-text col-xs-12 col-sm-5 col-md-6 col-lg-5">
                <div class="sa-section-header with-sub-section-heading">
                    <h1 class="banger heading">@partials.index.name</h1>
                    <h3>@partials.index.nameSubHeading</h3>
                </div>

                <p>@partials.index.nameDescription</p>
                <!-- Buttons (hidden when < md) -->
                <div class="btn-form btn-scroll hidden-xs hidden-sm">
                    <a href="@url.languages.lang/@url.url.cvPage" class="btn"><i class="@partials.index.downloadIcon"></i>@partials.index.downloadButton</a>
                    <a href="@url.languages.lang/@url.url.aboutSection" class="btn"><i class="@partials.index.aboutIcon"></i>@partials.index.aboutButton</a>
                </div>
            </div>

            <!-- Image -->
            <div id="pizarraImageContainer" class="sa-features-image col-xs-12 col-sm-7 col-md-6 col-lg-7">

                <img src="@partials.index.pizarraImage" class="img-responsive center-block" alt="@partials.index.pizarraAlt" />
            </div>

            <!-- Buttons (hidden when > sm) -->
            <div class="btn-form btn-scroll col-xs-12 col-sm-12 hidden-md hidden-lg">
                <a href="@url.languages.lang/@url.url.cvPage" class="btn"><i class="@partials.index.downloadIcon"></i>@partials.index.downloadButton</a>
                <a href="@url.languages.lang/@url.url.aboutSection" class="btn"><i class="@partials.index.aboutIcon"></i>@partials.index.aboutButton</a>
            </div>
        </div>

    </div> <!-- End: .container -->
</section> <!-- End: section -->

<!-- Projects summary =========================================================== -->
<section class="sa-features-1">
    <div class="container">
        <div class="row">
            <!-- Texts -->
            <div class="sa-features-text col-xs-12 col-sm-6 col-sm-push-6">
                <div class="sa-section-header with-sub-section-heading">
                    <h1 class="banger heading">@partials.index.projectSummaryTitle</h1>
                </div>

                <p>@partials.index.pojectSummaryDescription</p>
                <!-- Buttons -->
                <div class="btn-form btn-scroll" id="smallPortfolioButton">
                    <a href="@url.languages.lang/@url.url.projectsSection" class="btn"><i class="fa fa-th"></i>@partials.index.allButton</a>
                </div>
            </div>

            <!-- Image portfolio -->
            <div class="smallPortfolio sa-features-portfolio col-xs-12 col-sm-6 col-sm-pull-6">
                @*150 x 150*@
                <div class="col-xs-12">
                    <img src="@partials.index.mercedesImage" alt="@partials.index.mercedesAlt" /><img src="@partials.index.abengoaImage" alt="@partials.index.abengoaAlt" />                   
                </div>

                <div class="col-xs-12">
                    <img src="@partials.index.supecoImage" alt="@partials.index.supecoAlt" /><img src="@partials.index.sabicImage" alt="@partials.index.sabicAlt" />
                </div>
            </div>

        </div>

    </div> <!-- End: .container -->
</section> <!-- End: section -->
